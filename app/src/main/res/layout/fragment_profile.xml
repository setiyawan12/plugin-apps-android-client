<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:nestedScrollingEnabled="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:elevation="2dp"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold"
                        android:text="USER INFO"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <LinearLayout
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_person_black_24dp"
                            android:layout_width="38dp"
                            android:layout_height="38dp"/>
                    <LinearLayout
                            android:layout_marginStart="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:text="Nama"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/detail_name"
                                android:textSize="16sp"
                                android:textColor="#000"
                                android:text="Prieyudha Akadiya S"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_email_black_24dp"
                            android:layout_width="38dp"
                            android:layout_height="38dp"/>
                    <LinearLayout
                            android:layout_marginStart="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:text="Email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/detail_email"
                                android:textSize="16sp"
                                android:textColor="#000"
                                android:text="akaditasustono@gmail.com"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_star_half_black_24dp"
                            android:layout_width="38dp"
                            android:layout_height="38dp"/>
                    <LinearLayout
                            android:layout_marginStart="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:text="Jabatan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/detail_jabatan"
                                android:textSize="16sp"
                                android:textColor="#000"
                                android:text="Anggota"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>



        </com.google.android.material.card.MaterialCardView>


        <View
                android:background="#DFDFDF"
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold"
                        android:text="PERSONAL INFO"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_credit_card_black_24dp"
                            android:layout_width="38dp"
                            android:layout_height="38dp"/>
                    <LinearLayout
                            android:layout_marginStart="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:text="NIM"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/detail_nim"
                                android:textSize="16sp"
                                android:textColor="#000"
                                android:text="16090115"
                                android:maxLines="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_local_phone_black_24dp"
                            android:layout_width="38dp"
                            android:layout_height="38dp"/>
                    <LinearLayout
                            android:layout_marginStart="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:text="Telepon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/detail_phone"
                                android:textSize="16sp"
                                android:textColor="#000"
                                android:text="+628123456789"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_date_range_black_24dp"
                            android:layout_width="38dp"
                            android:layout_height="38dp"/>
                    <LinearLayout
                            android:layout_marginStart="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:text="Tempat, tanggal lahir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/detail_dob"
                                android:textSize="16sp"
                                android:textColor="#000"
                                android:text="Tegal, 01-01-1999"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_send_black_24dp"
                            android:layout_width="38dp"
                            android:layout_height="38dp"/>
                    <LinearLayout
                            android:layout_marginStart="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:text="Telegram"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/detail_telegram"
                                android:textSize="16sp"
                                android:textColor="#000"
                                android:text="ydhnwb"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_bookmark_border_black_24dp"
                            android:layout_width="38dp"
                            android:layout_height="38dp"/>
                    <LinearLayout
                            android:layout_marginStart="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:text="Github"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/detail_github"
                                android:textSize="16sp"
                                android:textColor="#000"
                                android:text="github.com/ydhnwb"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_class_black_24dp"
                            android:layout_width="38dp"
                            android:layout_height="38dp"/>
                    <LinearLayout
                            android:layout_marginStart="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:text="Semester/Kelas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/detail_class"
                                android:textSize="16sp"
                                android:textColor="#000"
                                android:text="ydhnwb"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>